#!/usr/bin/env bash
set -eu

#
# Run all scripts located in this directory, alphabetically ordered
#

path=~/.cider/scripts
scripts=$(ls "$path" | grep -v $(basename "$0") | sort)

for script_name in $scripts; do
  script_path="$path/$script_name"
  [ ! -x $script_path ] && continue

  echo
  echo "â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”"
  echo "ğŸƒâ€  Running ${script_name}â€¦"
  echo "â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”"
  $script_path
done

echo "â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”"
echo "ğŸ‘Œ  All good!"
echo "âš ï¸  Please reboot your laptop"
echo "â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”"
