#!/usr/bin/env bash
set -eu

echo "üîß Running setup scripts‚Ä¶"

path=~/.cider/scripts
self=$(basename "$0")
scripts=$(ls "$path" | grep -v "$self" | sort)

for script_name in $scripts; do
  script_path="$path/$script_name"
  [ -x "$script_path" ] && $script_path
done

echo "‚ú® All good!"
echo "‚ö†Ô∏è Please reboot"
